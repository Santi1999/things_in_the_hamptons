---
import { formatDate } from "@/lib/utils/date";
import Calendar04 from "@/assets/svgs/calendar-04.astro";
import type { Event } from "@/lib/supabase";

type Props = {
  event: Event;
  index: number;
};

const { event, index } = Astro.props;

// Prepare a default image if event.image_url is null
const imageUrl = event.image_url || "/placeholder-event.jpg";
---

<article
  class="col-span-1 group max-w-sm mx-auto flex flex-col gap-2 h-full relative isolate"
>
  <div class="aspect-video overflow-hidden rounded-md">
    <img
      src={imageUrl}
      alt={event.title}
      loading={index < 3 ? "eager" : "lazy"}
      class="w-full h-full object-cover"
    />
  </div>
  <div class="flex flex-col flex-1">
    <h3
      class="text-xl font-serif font-semibold lg:group-hover:underline line-clamp-2"
    >
      <a href={`/events/${event.slug}`}>
        <span class="absolute inset-0 z-10 pointer-events-none"></span>
        {event.title}
      </a>
    </h3>
    <p class="text-sm text-base-content/80 line-clamp-3 text-pretty lg:mb-auto">
      {event.description}
    </p>
    <div class="flex items-center text-xs text-base-content/80 mt-2">
      <span class="flex items-center gap-1">
        <Calendar04 size="15" />
        <time datetime={event.start_time}>
          {formatDate(event.start_time, "short")}
        </time>
      </span>
      {event.location && (
        <span class="ml-2 text-xs text-primary dark:text-secondary">
          {event.location}
        </span>
      )}
    </div>
  </div>
</article>
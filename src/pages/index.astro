---
import BaseLayout from "@/layouts/base.astro";
import { getEntry } from "astro:content";
import Headlines from "./_home/headlines.astro";
// import LatestNews from "./_home/latestNews.astro";
import Authors from "./_home/authors.astro";
import UpcomingEvents from "./_home/upcomingEvents.astro";

const entry = await getEntry("views", "home");

if (!entry) {
  return Astro.redirect("/404");
}
---

<BaseLayout entry={entry}>
  <Headlines />
  <UpcomingEvents />
  <!-- <LatestNews /> -->
  <Authors />
</BaseLayout>
